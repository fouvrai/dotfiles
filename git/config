
[user]
    name  = Jared Russell
    email = jared@jaredru.com
[help]
    format = html
[core]
    editor = mvim -f
[push]
    default = simple
[pull]
    rebase = preserve



[alias]
    lg  = log --graph --format=format:'%C(blue)%h %Creset%an %C(green)(%ar) %C(yellow)%d%n        %Creset%s%n' --abbrev-commit --date-order
    lga = log --graph --format=format:'%C(blue)%h %Creset%an %C(green)(%ar) %C(yellow)%d%n        %Creset%s%n' --abbrev-commit --date-order --all

    stat = status --short --branch
    out  = checkout

    sup = submodule update --recursive --init

    d  = diff
    dp = !"f() { git diff ${1-HEAD}~ ${1-HEAD}; }; f"
    dc = diff --cached

    dt  = difftool
    dtp = !"f() { git difftool ${1-HEAD}~ ${1-HEAD}; }; f"
    dtc = difftool --cached

    mt = mergetool

    save = !"git stash save --include-untracked && git stash apply"
    trim = !"git remote | xargs git remote prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D"



[credential]
    helper = osxkeychain



[difftool]
    prompt = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
    indentHeuristic = true

[mergetool]
    prompt = false
    keepBackup = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[merge]
    tool = Kaleidoscope

[filter "media"]
    clean = git-media-clean %f
    smudge = git-media-smudge %f

